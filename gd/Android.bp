    "libbluetooth_gd",
    "libchrome",
    "libgmock",
    "libgtest",
  ],
  host_supported: true,
  generated_headers: [
    "BluetoothGeneratedPackets_h",
  ],
  target: {
    android: {
        shared_libs: [
            "android.hardware.bluetooth@1.0",
            "libhidlbase",
            "libutils",
        ],
    },
